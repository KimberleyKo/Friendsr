<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Friendsr"
            android:id="@+id/textView7"
            android:textSize="50dp"
            android:singleLine="false"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Click on an eligible single user to learn more and see if you are compatible for a date!"
            android:id="@+id/textView8"
            android:autoText="false"
            android:gravity="center_horizontal"
            />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="6"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:rowOrderPreserved="false"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Chandler"
                    android:src="@drawable/chandlerpreview"
                    android:onClick="onClickFriend"
                    android:layout_row="0"
                    android:layout_column="0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Joey"
                    android:src="@drawable/joeypreview"
                    android:layout_gravity="center_horizontal"
                    android:onClick="onClickFriend"
                    android:layout_row="0"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chandler"
                    android:id="@+id/textView"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joey"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Monica"
                    android:src="@drawable/monicapreview"
                    android:onClick="onClickFriend"
                    android:layout_row="2"
                    android:layout_column="0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Rachel"
                    android:src="@drawable/rachelpreview"
                    android:onClick="onClickFriend"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monica"
                    android:id="@+id/textView3"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rachel"
                    android:id="@+id/textView4"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Ross"
                    android:src="@drawable/rosspreview"
                    android:onClick="onClickFriend"
                    android:layout_row="4"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ross"
                    android:id="@+id/textView5"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Phoebe"
                    android:src="@drawable/phoebepreview"
                    android:onClick="onClickFriend"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:layout_gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phoebe"
                    android:id="@+id/textView6"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp" />

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

